extends ../../../layouts/account

block head
	title Euglena Live Lab

block neck
	link(rel='stylesheet', href='/views/account/lab/index.min.css?#{cacheBreaker}')
	link(rel='stylesheet', href='/views/account/lab/jquery-ui.css')
	script(src="/views/account/lab/jquery-1.11.0.min.js")
	script(src="/views/account/lab/jquery-ui.js")
	script(src="http://d3js.org/d3.v3.min.js" charset="utf-8")
	script(src="/views/account/lab/Vector2.js")
	script(src="/views/account/lab/functions.js")
	script(src="/views/account/lab/socket_io.js")
	script(src="/views/account/lab/joystick.js")
	script(src="/views/account/lab/object.js")
	script(src="/views/account/lab/hand.minified-1.3.4.js")

block body
	div.row
		div.col-sm-12
			#canvasArea(style="padding: 10px; width=640px; height: 480px;")
	div.row
		h4 Euglena live webcam
		div.row
			div.col-sm-6
				#ledArea(align="center", style="width:300px;height:300px;padding:4px;")
			div.col-sm-6
				#joystickArea(style="width:300px;height:300px;")
					canvas#controlCanvas(style="background:#000;padding:10px;")
	div.row
		div.col-sm-4
			#username(style="padding:4px;")
				h6 What's your name?
					input(type="text", name="usernameTxt")
					input(type="button", name="setUsername", value="Enter")
			#num(style="background:#000;padding: 10px;")
				h6 number of objects [1,20]
				h6#n_slider
				h6#n_value
			#size(style="background:#000;padding: 10px;")
				h6 size of objects [20,200]
				h6#size_slider
				h6#size_value
			#rep(style="background:#000;padding: 10px;")
				h6 repelling force [0.00, 1.00]
				h6#v_slider
				h6#v_value
			#brownian(style="background:#000;padding: 10px;")
				h6 object random motion radius [0.00, 1.00]
				h6#br_slider
				h6#br_value
			h5 TOP 5 SCORES
			#board
		div.col-sm-8
			#chat(style="padding: 6px; min-width:600px; max-height:300px; overflow-y:scroll;")
	div.row
		div#mdArea(style="width:640px;height:480px; padding:10px;visibility:hidden;")
			canvas#mdCanvas
